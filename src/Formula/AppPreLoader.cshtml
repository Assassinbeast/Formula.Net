<div id="ff-preloader-screen" class="ff-preloader-screen">
	<style>

		.ff-preloader-item {
			width: 100px;
			height: 100px;
			position: relative;
			animation: ff-preloader-item 2.5s infinite linear both;
		}

		.ff-preloader-item-dot {
			width: 100%;
			height: 100%;
			position: absolute;
			left: 0;
			top: 0;
			animation: ff-preloader-item-dot 2.0s infinite ease-in-out both;
		}

		.ff-preloader-item-dot:before {
			content: '';
			display: block;
			width: 25%;
			height: 25%;
			background-color: #fff;
			border-radius: 100%;
			animation: ff-preloader-item-dot-before 2.0s infinite ease-in-out both;
		}

			.ff-preloader-item-dot:nth-child(1) {
				animation-delay: -1.1s;
			}

			.ff-preloader-item-dot:nth-child(2) {
				animation-delay: -1.0s;
			}

			.ff-preloader-item-dot:nth-child(3) {
				animation-delay: -0.9s;
			}

			.ff-preloader-item-dot:nth-child(4) {
				animation-delay: -0.8s;
			}

			.ff-preloader-item-dot:nth-child(5) {
				animation-delay: -0.7s;
			}

			.ff-preloader-item-dot:nth-child(6) {
				animation-delay: -0.6s;
			}

			.ff-preloader-item-dot:nth-child(1):before {
				animation-delay: -1.1s;
			}

			.ff-preloader-item-dot:nth-child(2):before {
				animation-delay: -1.0s;
			}

			.ff-preloader-item-dot:nth-child(3):before {
				animation-delay: -0.9s;
			}

			.ff-preloader-item-dot:nth-child(4):before {
				animation-delay: -0.8s;
			}

			.ff-preloader-item-dot:nth-child(5):before {
				animation-delay: -0.7s;
			}

			.ff-preloader-item-dot:nth-child(6):before {
				animation-delay: -0.6s;
			}

		@@keyframes ff-preloader-item {
			100% {
				transform: rotate(360deg);
			}
		}

		@@keyframes ff-preloader-item-dot {
			80%, 100% {
				transform: rotate(360deg);
			}
		}

		@@keyframes ff-preloader-item-dot-before {
			50% {
				transform: scale(0.4);
			}

			100%, 0% {
				transform: scale(1.0);
			}
		}

		@@keyframes ff-preloader-screen-exit {
			0% {
				opacity: 1;
			}

			100% {
				opacity: 0;
			}
		}
		.ff-preloader-screen-exit {
			-webkit-animation: ff-preloader-screen-exit 200ms forwards;
			animation: ff-preloader-screen-exit 200ms forwards;
		}

		.ff-preloader-screen {
			position: fixed;
			left: 0;
			top: 0;
			width: 100%;
			height: 100%;
			background: #FF0101;
			background: linear-gradient(to bottom right, #FF0101, #2C01FF);
			-webkit-box-align: center;
			align-items: center;
			-webkit-box-pack: center;
			justify-content: center;
			z-index: 9999;
		}

		.ff-preloader-screen-display {
			display: -webkit-box;
			display: flex;
		}
	</style>

	<div class="ff-preloader-item">
		<div class="ff-preloader-item-dot"></div>
		<div class="ff-preloader-item-dot"></div>
		<div class="ff-preloader-item-dot"></div>
		<div class="ff-preloader-item-dot"></div>
		<div class="ff-preloader-item-dot"></div>
		<div class="ff-preloader-item-dot"></div>
	</div>

</div>


<script>
	var appPreloader = document.querySelector("#ff-preloader-screen");
	appPreloader.classList.add("ff-preloader-screen-display");
</script>